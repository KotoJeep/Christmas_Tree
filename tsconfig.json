 {
   "compilerOptions": {
     "module": "commonjs",
     "esModuleInterop": true,
     "target": "es6",
     "removeComments": true,
     "moduleResolution": "node",
     "outDir": "build",
     "sourceMap": true,
     "noImplicitAny": true,
     "skipLibCheck": true,
     //  "strict": true
   },
   "typeAcquisition": {
     "include": [
       "/src/**/*"
     ],
     "exclude": [
       "/node_modules"
     ],
   },
   "lib": ["es6"]
 }
